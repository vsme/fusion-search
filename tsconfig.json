{
  "compilerOptions": {
    "module": "ESNext", // æˆ– "ESModule"
    "target": "ESNext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "declaration": true,
    "outDir": "./dist",
    "inlineSources": true,
    "sourceMap": true,
    "rootDir": "src",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src/**/*"],

  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
    }
  }
}
